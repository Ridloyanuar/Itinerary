<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_populer"
        android:layout_width="@dimen/frogo_rv_dimen_200dp"
        android:layout_height="@dimen/frogo_rv_dimen_150dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dashboard_image" />

    <TextView
        android:id="@+id/tv_populer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/mainTeks"
        app:layout_constraintEnd_toEndOf="@+id/iv_populer"
        app:layout_constraintStart_toStartOf="@+id/iv_populer"
        app:layout_constraintTop_toBottomOf="@+id/iv_populer" />

    <Button
        android:id="@+id/btn_add_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button"
        android:text="Tambah Lokasi"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_populer"
        app:layout_constraintStart_toStartOf="@+id/tv_populer"
        app:layout_constraintTop_toBottomOf="@+id/tv_populer" />
</androidx.constraintlayout.widget.ConstraintLayout>